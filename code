#include <stdio.h>


/* returns a value the user inputs */
double get_value(void)
{
 double value;
 
 printf ("Please type in a digit then press enter:  ");
 scanf ("%lf", &value);
 printf ("The digit you entered is %lf.\n\n", value);
 return value;
}



void main (void)
